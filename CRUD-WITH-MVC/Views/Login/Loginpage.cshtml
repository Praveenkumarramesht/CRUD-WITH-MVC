
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>School Details LogIn</title>
    <link rel="icon" href="School.jpg">
    <style>
        body {
            text-align: center;
            color: red;
            margin: 100px;
            padding: 20px;
            border: 20px solid green
        }

        input[type="text"],
        input[type="password"] {
            text-align: center;
            margin: 10px;
            padding: 5px;
            width: 300px;
        }

        input[type="reset"],
        input[type="submit"] {
            text-align: center;
            margin: 5px;
            padding: 5px;
            width: 100px;
        }
    </style>
</head>
<body>
    <h1 style="color:red;">LogIn Form </h1>
    <form asp-controller="SchoolDetails" asp-action="Index">
        <input type="text" placeholder="Enter the Name">
        <br>
        <input type="password" placeholder="Enter the PassWord">
        <br>
        <h3 style="color:black;">Gender</h3>
        <input type="radio" name="Gender" value="male">Male
        <input type="radio" name="Gender" value="Female">Female
        <input type ="submit" value="Login"
    </form>
    <br>

   
</body>
</html>
